      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="..\..\Documents\Talent Trees.txt">
      <Link>Talent Trees.txt</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
